<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">ブログ新規登録</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">登録事項</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <!-- flash message -->
              <p><%= notice %></p>
              <%= form_for [:admin, @blog] do |f| %>
                <div class="form-group">
                  <%= f.label:ブログ名 %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label:ブログURL %>
                  <%= f.text_field :link, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label:ブログRSSのURL %>
                  <%= f.text_field :rss_link, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label:備考 %>
                  <%= f.text_area :description, class: 'form-control' %>
                </div>
                  <%= f.submit '登録', class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
